<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/tv_store_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디아블로 얼티밋 도너킹 팩 1"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_store_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22,200원"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_store_menu_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_store_menu_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="디아블로얼티밋도넛킹+"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_store_menu_price"
        android:layout_marginTop="15dp" />

    <ImageView
        android:id="@+id/iv_store_menu"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_cart_add"
        android:background="@drawable/bg_white_round"
        app:layout_constraintEnd_toEndOf="@id/iv_store_menu"
        android:padding="3dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_store_menu" />

    <LinearLayout
        android:id="@+id/lin_store_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_store_menu_detail">

        <ImageView
            android:id="@+id/iv_store_up"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_up"/>
        <TextView
            android:id="@+id/tv_store_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14명"
            android:textSize="10sp" />


    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/main_grey"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lin_store_up" />


</androidx.constraintlayout.widget.ConstraintLayout>