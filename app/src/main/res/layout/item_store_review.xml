<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:paddingEnd="80dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_stroke_grey"
    android:paddingVertical="12dp"
    android:paddingStart="12dp">
    
    <ImageView
        android:id="@+id/iv_store_review"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#000000"/>

    <TextView
        android:id="@+id/tv_store_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="버거킹 굉장히 맛있어요 !!!"
        app:layout_constraintStart_toEndOf="@id/iv_store_review"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:textColor="@color/main_text_color"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/review_rating_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:theme="@style/RatingBar"
        app:layout_constraintStart_toStartOf="@id/tv_store_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:rating="1.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>