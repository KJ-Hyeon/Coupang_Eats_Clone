<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/book_mark_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_mark_content1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_bookmark"
        android:layout_marginBottom="40dp"
        android:textSize="15sp"
        android:textColor="#191919"/>

    <TextView
        android:id="@+id/book_mark_content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/book_mark_content2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/book_mark_content1"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#191919"/>
    
    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="330dp"
        android:layout_height="260dp"
        android:src="@drawable/bg_bookmark_none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <Button
        android:id="@+id/btn_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠팡이츠 맛집 구경하기"
        android:background="@drawable/bg_stroke_black"
        android:minHeight="1dp"
        android:paddingVertical="8dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_bookmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp"
        android:layout_marginTop="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>