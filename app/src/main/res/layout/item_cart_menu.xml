<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="해물짬뽕"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/My_black"/>

    <TextView
        android:id="@+id/menu_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/menu_name"
        android:text="할리피뇨추가(500원)"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu_name"
        />

    <TextView
        android:id="@+id/menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0원"
        app:layout_constraintStart_toStartOf="@id/menu_option"
        app:layout_constraintTop_toBottomOf="@id/menu_option"
        android:layout_marginTop="8dp"
        android:textColor="@color/My_black"/>

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_finish_grey"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_stroke_grey"
        android:text="1"
        android:textSize="12sp"
        android:drawableEnd="@drawable/ic_fill_arrow_down"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/ic_delete"
        app:layout_constraintEnd_toEndOf="@id/ic_delete"
        android:layout_marginTop="8dp"
        android:drawablePadding="20dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/menu_price"
        android:background="@color/main_grey" />





</androidx.constraintlayout.widget.ConstraintLayout>