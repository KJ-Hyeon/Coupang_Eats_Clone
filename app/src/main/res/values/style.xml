<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Home_Text">
        <item name="android:textColor">@color/My_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Page_Bottom_sheet_Head_Text">
        <item name="android:textColor">@color/My_black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Page_Bottom_sheet_Text">
        <item name="android:textColor">@color/My_black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/star_grey</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>
    
<!--  TabLayout Style -->
    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabPaddingBottom">12dp</item>
        <item name="tabPaddingTop">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/My_black</item>
        <item name="tabSelectedTextColor">@color/My_black</item>
    </style>

    <style name="BlueTabLayout" parent="TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabPaddingBottom">12dp</item>
        <item name="tabPaddingTop">12dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/Bottom_Text_blue</item>
        <item name="tabSelectedTextColor">@color/Bottom_Text_blue</item>
    </style>

    <style name="reviewRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="colorControlNormal">@color/star_grey</item>
        <item name="colorControlActivated">@color/star_yellow</item>
    </style>



    
</resources>